@implements IDisposable

<div class="chat-input-container">
    <input type="text" class="chat-input" value="@chatMessage" @oninput="HandleInput" @onkeyup="HandleKeyPress"
        maxlength="40" placeholder="Type a short message..." />
    <button class="chat-submit" @onclick="SubmitMessage"
        disabled="@string.IsNullOrWhiteSpace(chatMessage)">Send</button>
</div>

<style>
    .chat-input-container {
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 10px;
        background-color: rgba(255, 255, 255, 0.8);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .chat-input {
        flex-grow: 1;
        margin-right: 10px;
        padding: 10px;
        border-radius: 20px;
        border: 1px solid #ccc;
        font-size: 16px;
    }

    .chat-submit {
        padding: 10px 20px;
        border-radius: 50px;
        border: none;
        background-color: #007bff;
        color: white;
        font-size: 16px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .chat-submit:hover {
        background-color: #0056b3;
        transform: scale(1.05);
    }

    .chat-submit:active {
        transform: scale(0.95);
    }

    .chat-submit:disabled {
        background-color: #cccccc;
        cursor: not-allowed;
        transform: none;
    }

    .chat-submit:disabled:hover {
        background-color: #cccccc;
        transform: none;
    }
</style>

@code {
    private string chatMessage = "";

    [Parameter]
    public EventCallback<string> OnMessageSubmit { get; set; }

    protected override void OnInitialized()
    {
        Console.WriteLine("ChatInput component initialized");
    }

    private void HandleInput(ChangeEventArgs e)
    {
        chatMessage = e.Value?.ToString() ?? "";
        Console.WriteLine($"Input changed: {chatMessage}");
        StateHasChanged();
    }

    private async Task SubmitMessage()
    {
        Console.WriteLine($"SubmitMessage called with message: {chatMessage}");
        if (!string.IsNullOrWhiteSpace(chatMessage))
        {
            await OnMessageSubmit.InvokeAsync(chatMessage);
            chatMessage = "";
            StateHasChanged();
        }
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        Console.WriteLine($"HandleKeyPress called with key: {e.Key}");
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(chatMessage))
        {
            SubmitMessage();
        }
    }

    public void Dispose()
    {
        Console.WriteLine("ChatInput component disposed");
    }
}