<img src="@GetFishImagePath()" alt="@Color" style="@($"transform: scale({Scale});")" />

@code {
    [Parameter]
    public FishColor Color { get; set; } = FishColor.Orange;
    public string Scale { get; set; } = "100.0";

    protected override void OnInitialized()
    {
        Color = GetRandomColor();
        var random = new Random();
        var scaleValue = random.NextDouble() * (1.00 - 0.5) + 0.5; // Random.NextDouble generates a value between 0.0 and 1.0
        Scale = scaleValue.ToString("0.##"); // Convert to string with up to 2 decimal places
    }

    private string GetFishImagePath()
    {
        return $"fish/{Color}/Left.png";
    }

    public FishColor GetRandomColor()
    {
        var values = Enum.GetValues(typeof(FishColor));
        var randomIndex = new Random().Next(values.Length);
        return (FishColor)(values.GetValue(randomIndex) ?? FishColor.Orange);
    }
}
